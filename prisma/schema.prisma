// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int             @id @default(autoincrement())
  uuid          String          @unique()
  name          String
  phone         String          @unique
  level         UserLevel       @default(APPROVER)
  password      String
  createdAt     DateTime        @default(now())
  GoodsHistory  GoodsHistory[]
  ActiveContact ActiveContact[]
}

enum UserLevel {
  APPROVER
  ADMIN
}

model ActiveContact {
  id     Int   @id @default(autoincrement())
  userId Int
  user   Users @relation(fields: [userId], references: [id])
}

model Goods {
  id           Int            @id @default(autoincrement())
  uuid         String         @unique
  name         String
  unit         String
  stock        Int            @default(0)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now()) @updatedAt
  GoodsHistory GoodsHistory[]
}

model Requester {
  id            Int       @id @default(autoincrement())
  uuid          String    @unique()
  name          String
  phone         String    @unique
  numberRequest Int       @default(0)
  request       Request[]
}

model Request {
  id           BigInt         @id @default(autoincrement())
  uuid         String         @unique()
  idRequester  Int
  requester    Requester      @relation(fields: [idRequester], references: [id])
  takeDate     DateTime
  returnDate   DateTime?
  type         RequestType
  status       RequestStatus  @default(PENDING)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  goodsHistory GoodsHistory[]
}

enum RequestType {
  BORROW
  TAKE
}

enum RequestStatus {
  PENDING
  REJECT
  APPROVE
}

model GoodsHistory {
  id        BigInt   @id @default(autoincrement())
  uuid      String   @unique()
  idRequest BigInt?
  request   Request? @relation(fields: [idRequest], references: [id])
  idGoods   Int
  goods     Goods    @relation(fields: [idGoods], references: [id], onDelete: Cascade)
  quantity  Int
  assignBy  Int?
  assignee  Users?   @relation(fields: [assignBy], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
